<body>

<form action="/action_page.php">
  <div class="container">
    <h1>Register</h1>
    
    <label for="userName"><b>User Name : </b></label>
    <input type="text" placeholder="Enter UserName" name="name" id="name" required>
    <br>
    <label for="psw"><b>Password : </b></label>
    <input type="password" placeholder="Enter Password" name="psw" id="psw" required>
    <br>
    <label for="psw-repeat"><b>Re-enter Password : </b></label>
    <input type="password" placeholder="Re-Enter Password" name="psw-repeat" id="psw-repeat" required>
     <br>
    <button type="submit" class="registerbtn">Register</button>
    <br>
       <a id="aTag" href="">Back To Login Page</a>
  </div>
  
</form>
